@model IEnumerable<contactii2.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategorieName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategorieName)
            </td>
            <td>
                <a class="btn btn-primary edit" asp-action="Edit" asp-route-id="@item.CategorieID">Edit</a> |
                <a class="btn btn-primary details" asp-action="Details" asp-route-id="@item.CategorieID">Details</a> |
                <a class="btn btn-primary delete" asp-action="Delete" asp-route-id="@item.CategorieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
